<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/eighty"
    android:layout_height="@dimen/sixty">

    <Button
        android:id="@+id/recalibrateBtn"
        android:layout_width="@dimen/eighty"
        android:layout_height="@dimen/thirty"
        android:text="@string/recalibrate"
        android:textColor="@color/black_color"
        android:textSize="@dimen/btn_font_size"
        android:background="@drawable/img_board_rect"
        android:gravity="center" />
    <Button
        android:id="@+id/exitBtn"
        android:layout_width="@dimen/eighty"
        android:layout_height="@dimen/thirty"
        android:text="@string/exit"
        android:textColor="@color/black_color"
        android:textSize="@dimen/btn_font_size"
        android:background="@drawable/img_board_rect"
        android:gravity="center"
        android:layout_below="@id/recalibrateBtn"/>

</RelativeLayout>
